<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="loginTextInput">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
    </style>

    <style name="ListHeaderStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="ListHeaderStyleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ListHeaderStyleExtraLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="smallLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="textProfile">
        <item name="android:gravity">start</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="labelDashboard">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primaryColor</item>
    </style>

</resources>
